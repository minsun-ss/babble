FROM golang:1.23.4-alpine AS build-stage

# create the server
WORKDIR /app
COPY backend/go.mod ./
RUN go mod download
COPY ./backend/ .
RUN CGO_ENABLED=0 GOOS=linux go build -o /cli ./cmd/babble/cli

# copy binary to new image
FROM alpine:latest
COPY --from=build-stage /cli /cli
ENTRYPOINT ["/cli"]
